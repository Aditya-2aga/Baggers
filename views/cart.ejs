<%- include('./partials/header') %>
<% user.cart.forEach(cartItem => { %>
    <div class="px-10 mb-0">
        <h3 class="text-2xl">Cart Value: <% let totalAmount = 0; %>
            <% user.cart.forEach(cartItem => { totalAmount += cartItem.discount}); %>
            <%= totalAmount + 20 %></h3>
    </div>
    <div class="w-full flex items-start px-20 py-20 gap-10">
        <div class="w-[30%] rounded-md overflow-hidden">
                <div class="w-full flex justify-center items-center h-80 bg-[<%= cartItem.bgcolor %>]">
                  <img class="h-[18rem]" src="data:image/jpeg;base64, <%= cartItem.image.toString('base64') %>" alt="">
                </div>
            <div class="w-full flex justify-between px-5 py-4 bg-[<%= cartItem.panelcolor %>]">
                <h3 class="text-2xl "><%= cartItem.name %></h3>
                <div class="flex items-center gap-2">
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                    <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                </div>
            </div>
            <div class="flex items-center justify-between px-5 py-3 bg-[<%= cartItem.textcolor %>]">
                <h4 class="text-lg">Net Total</h4>
                <h2 class="text-lg"><%= cartItem.price %></h2>
            </div>
        </div>
        <div class="w-[70%]">
            <h3 class="text-xl">Price Breakdown</h3>
            <div class="px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4><%= cartItem.price %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">After Discount</h4>
                    <h4><%= cartItem.discount %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee(Only once)</h4>
                    <h4>â‚¹ 20</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600"><%= cartItem.discount%> (without platform fee)</h3>
            </div>
            <form action=""></form>
        </div>
    </div>
    <% }); %>
    <%- include('./partials/footer') %>